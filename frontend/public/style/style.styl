ease-in = cubic-bezier(0, .6, .4, 1)
background-blur(color=#fffb)
	background color
	backdrop-filter blur(12px)


html
	scroll-behavior smooth

	body
		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh
		overflow-x hidden

		a
			text-decoration none

		.icon
			height 25px

		.clickable
			cursor pointer

		iframe
			border none
			width 100%

		header
			background-blur()
			position sticky
			top 0
			border-radius 0 0 12px 12px
			box-shadow 0 1vh 2vh 0 #8881

			img
				height 3em

			nav a
				@media screen and (max-width 768px)
					display none !important

		.file-path
			border-bottom 2px solid #aaa
			margin 1em 0

		.file
			padding .2em 1ch
			margin .3em 0
			border-radius 5px
			border 1px solid #aaa

		.list-move,
		.list-enter-active,
		.list-leave-active
			transition opacity .5s ease, transform .5s ease

		.list-enter-from,
		.list-leave-to
			opacity 0
			transform translateX(30px)

		.list-leave-active
			position absolute

		.popup-enter-active,
		.popup-leave-active
			transition opacity .2s ease, transform .2s ease

		.popup-enter-from,
		.popup-leave-to
			transform scale(1.1)
			opacity 0

		#flash-container
			.flash
				display flex
				flex-flow row nowrap
				align-content center

				.separator
					align-self stretch
					display inline-block
					width 4px
					border-radius 2px
					margin 0 .75em
					filter brightness(.75)

		#notification-container
			position fixed
			left 50vw
			width 60vw
			margin-top 10vh
			transform translateX(-50%)

			.notification
				margin-bottom 2em
				padding 1em
				border-radius 10px
				transition opacity .4s ease-in,
				transform .6s ease-in

				&.inactive
					opacity 0
					transform translateY(-100%)

				.close-icon
					height 1em
					width 1em

		main
			margin 2em auto
			max-width 95%
			flex-grow 1

			#menu-backdrop
				position fixed
				left 0
				top 0
				right -100%
				bottom 0
				background-color #0006
				transition transform .2s ease-in, opacity .2s ease

				&.hidden
					opacity 0
					pointer-events none
					transform translateX(-20%)

			#side-menu
				background-blur()
				position fixed
				left 0
				top 0
				height 100%
				padding 10vh 10vw
				overflow-y auto

				.btn
					display block
					width 100%

			.popup-backdrop
				position fixed
				display flex
				flex-flow row
				justify-content center
				align-items center
				left 0
				right 0
				top 0
				bottom 0
				background #0006

				.popup
					max-width unquote('min(768px, 90vw)')
					min-width 300px
					max-height 90%
					overflow-y auto
					padding 2em
					background #fff
					border-radius 10px

			#navigation-container, #help-container
				border-radius 10px
				border 1px solid darken(#fff, 15)
				padding 1em
				flex 0 0 20%
				box-shadow 0 1vh 2vh 0 #8881

			#navigation-container
				li
					list-style none

				a
					font-weight bold
					color #000

			#help-container
				word-break break-word

				a
					text-decoration underline

				.help-header
					cursor pointer
					color #000

				div.help-collapsed
					.help-header
						color #777

						&:hover
							color #000

					.help-content
						display none

			#main-container
				width 95vw
				justify-content space-between

				@media screen and (min-width 768px)
					display flex

				#dashboard
					#app-container
						flex-flow row wrap
						justify-content space-between

						.app
							flex 1 0 30%
							min-width 15em
							padding 2em
							margin-bottom 2em
							border-radius 10px
							color #000
							word-break break-word
							background-color darken(#fff, 3)

							.app-anchor
								transform translateY(-24vh)

		footer
			border-radius 12px 12px 0 0

			a
				color #000
				text-decoration underline
