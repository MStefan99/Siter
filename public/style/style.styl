ease-in = cubic-bezier(0, .6, .4, 1)
background-blur(color=#fffb)
	background color
	backdrop-filter blur(12px)


html
	body
		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh
		overflow-x hidden

		a
			text-decoration none

		.icon
			height 20px

		.clickable
			cursor pointer

		iframe
			border none
			width 100%

		header
			background-blur()
			position sticky
			top 0
			border-radius 0 0 12px 12px
			box-shadow 0 1vh 2vh 0 #8881

			img
				height 3em

		#flash-container
			.flash
				display flex
				flex-flow row nowrap
				align-content center

				.separator
					align-self stretch
					display inline-block
					width 4px
					border-radius 2px
					margin 0 .75em
					filter brightness(.75)

		#notification-container
			position fixed
			left 50vw
			width 60vw
			margin-top 10vh
			transform translateX(-50%)

			.notification
				margin-bottom 2em
				padding 1em
				border-radius 10px
				transition opacity .4s ease-in,
				transform .6s ease-in

				&.inactive
					opacity 0
					transform translateY(-100%)

				.close-icon
					height 1em
					width 1em

		main
			margin 2em auto
			max-width 95%
			flex-grow 1

			.popup-backdrop
				position fixed
				left 0
				right 0
				top 0
				bottom 0
				background #0006

				.popup
					position fixed
					left 50vw
					top 50vh
					max-height 90vh
					overflow-y auto
					padding 2em
					background #fff
					border-radius 10px
					transform translate(-50%, -50%)

			#navigation-container, #help-container
				border-radius 10px
				border 1px solid darken(#fff, 15)
				padding 1em
				flex 0 0 20%
				box-shadow 0 1vh 2vh 0 #8881

			#navigation-container
				li
					list-style none

				a
					font-weight bold
					color #000

			#help-container
				word-break break-word

				a
					text-decoration underline

				.help-header
					cursor pointer
					color #000

				div.help-collapsed
					.help-header
						color #777

						&:hover
							color #000

					.help-content
						display none

			#main-container
				width 95vw
				justify-content space-between

				@media screen and (min-width 768px)
					display flex

				#dashboard
					#route-container
						flex-flow row wrap
						justify-content space-between

						.route
							word-break break-word
							color #000
							background-color darken(#fff, 3)
							border-radius 10px
							padding 2em
							margin-bottom 2em
							flex 1 0 30%

		footer
			border-radius 12px 12px 0 0

			a
				color #000
				text-decoration underline
