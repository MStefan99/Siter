extends layout

block head
	title Sign in | Siter

block header
	b.mx-3 Sign in

block main
	form#login-form(action="/auth/login" method="post")
		h4 Sign in to Siter!
		input#username(type='text' autocomplete='username' value='admin' hidden)
		label(for="password") Password
		input#password(type="password" name="password"
			autofocus placeholder="Your password" autocomplete="current-password")
		if !secure
			p.bold.text-danger Your connection is not secure!
			p.bold.text-danger Do not submit your password unless Siter is running locally.
		input.btn.btn-success(type="submit")
