include menu

doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		link(rel='stylesheet' type='text/css' href='/style/stylify.css')
		link(rel='stylesheet' type='text/css' href='/style/style.css')
		link(rel='icon' type='image/svg+xml' href='/img/icon.svg')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		if (analytics && analytics.enabled)
			script(async type="module").
				import {sendHit} from '#{analytics.url}/cc?k=#{analytics.audienceKey}&verbose';
				sendHit();
		block head
			title Siter

	body
		header.d-flex.border-bottom.justify-content-between.align-items-center.px-5
			a(href='/#')
				img.logo(src='/img/logo.svg' alt='Siter logo')
			block header
			nav
				a.btn.btn-outline-secondary(href='/about') About
				if (session)
					a.btn.btn-outline-secondary(href='/settings') Settings
					a.btn.btn-outline-primary(href='/auth/logout') Sign out
				span#menu-toggle.btn.btn-outline-secondary.d-inline.d-md-none Menu

		#notification-container

		main
			include flash
			+menu
				a.btn.btn-outline-secondary(href='/about') About
				if (session)
					a.btn.btn-outline-secondary(href='/') Apps
					a.btn.btn-outline-secondary(href='/settings') Settings
					a.btn.btn-outline-primary(href='/auth/logout') Sign out
				else
					a.btn.btn-outline-secondary(href='/login') Sign in
			block main

		footer.bg-light.d-flex.justify-content-between.px-5
			img.logo.mx-auto(src="/img/logo.svg" alt="Siter logo")
			block footer
