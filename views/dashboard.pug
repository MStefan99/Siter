extends layout

block main
	div.d-flex
		include nav-container

		div#dashboard.mx-5
			h1 Dashboard
			h2#status Status
			div.alert.alert-secondary.mx-3#status-field Waiting for server...
			h2#routes Routes
			div#route-container.d-md-flex
				div.route.mx-3
					h3 Siter route
					div.route-mask.border-bottom
						h4 URL mask
						a(href='/#')
							b.subdomain siter
							span.text-muted .your-domain.tld:
							b.port 80
							span.text-muted /
					div.route-security.border-bottom
						h4 Security
						p.secure Secure: #[b yes]
						p.keyFile Key file location: #[b /path/to/keyFile.key]
						p.certFile Certificate file location: #[b /path/to/certFile.crt]
					div.route-target.border-bottom
						h4 Target
						p
							b Siter web interface
			button.btn-primary.ml-3#add-route-button Add route
		include info-container

	script(type="module" src="/js/dashboard.js")
	script(type="module" src="/js/route_manager.js")
