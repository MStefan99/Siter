doctype html
head
	include ../head
	link(rel="stylesheet", type="text/css", href="/style/login.css")

body
	header
		p siter-logo
		ul
			li
				a(href="/about/") About Siter

	main
		div.login-wrapper
			form.login-form(action="/login", method="post")
				label.title Sign in to Siter!
				label.subtitle(for="username") Username
				input.text#username(type="text", name="username", placeholder="user")
				label.subtitle(for="username") Password
				input.text#password(type="password", name="password", placeholder="pass")
				input.button#submit(type="submit")

footer
	include ../footer