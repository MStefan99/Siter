@require variables

p, ul
	margin 0
	padding 0

html
	body
		font-family sans-serif
		margin 0

		header
			display flex
			flex-flow row nowrap
			align-items center
			justify-content space-between
			padding 3vh 5vw
			background mainGradient
			color white

			ul
				display flex
				flex-flow row wrap
				list-style-type none
				margin-left 10vw;

				li
					margin 1vh 1vw

					a
						color white

		main
			padding page-padding
			display flex
			flex-flow row nowrap
			justify-content center
			align-items flex-start

			div.navigation-container
				order 0
				flex 1 2

			div.main-container
				order 1
				flex 3 1

				p.about
					max-width 60vw

			div.info-container
				order 2
				flex 1 2

		footer
			padding page-padding
