@require variables

p, ul
	margin .5em 0

html
	scroll-behavior smooth

	body
		font-family sans-serif
		margin 0

		header
			display flex
			flex-flow row nowrap
			align-items center
			justify-content space-between
			padding 3vh 5vw
			background mainGradient
			color #fff

			ul
				display flex
				flex-flow row wrap
				list-style-type none
				margin-left 10vw;

				li
					margin 1vh 1vw

					a
						color #fff

		main
			padding page-padding
			display flex
			flex-flow row nowrap
			justify-content center
			align-items flex-start

			div.navigation-container
				background #f5f5f5
				margin-top: 2vh;
				padding 0 1vh
				order 0
				flex 1 2

				h2
					text-align center

				ul
					list-style none
					padding-left 0

					li
						margin .5em 0

				a
					color: #000
					font-weight bold
					font-size 1em
					text-decoration none

					&:hover
						color #0a0

				.sub-element
					padding-left 1em

			div.main-container
				padding 0 2vh
				order 1
				flex 3 1

				div#dashboard-container
					.status-info
						display inline
						color #fff
						background #555
						font-weight bold
						font-size 2rem
						padding .5rem

					.good-status
						background #0a0

					.warning-status
						background #770

					.bad-status
						background #a00

					div.dashboard-section
						padding 1vh 0
						margin 1vh 0
						border-bottom 2px solid #ddd

					ul
						padding-inline-start 40px

				p.about
					max-width 60vw

			div.info-container
				background #f5f5f5
				margin-top: 2vh;
				padding 0 1vh
				order 2
				flex 1 2

				h2
					text-align center

		footer
			padding page-padding
